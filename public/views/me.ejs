<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio - Kenneth Panio</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #121212;
            color: #fff;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            user-select: none;
            transition: background-color 0.3s, color 0.3s;
        }

        #particles-js,
        #light-bg {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .skill-bar .skill::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 0;
            background: linear-gradient(90deg, rgba(255, 152, 0, 0.6), rgba(255, 152, 0, 1));
            box-shadow: 0 0 15px rgba(255, 152, 0, 0.5);
            animation: loadSkill 3s forwards;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        @keyframes loadSkill {
            from {
                width: 0;
            }

            to {
                width: var(--skill-level);
            }
        }

        .light-mode {
            background-color: #f0f0f0;
            color: #121212;
        }

        .light-mode .toggle-theme {
            color: #121212;
        }

        .light-mode .social-icons a {
            color: #121212;
        }

        .light-mode .social-icons a:hover {
            color: #ff9800;
        }

        .light-mode .project .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .light-mode .project .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .light-mode .skill-bar .skill {
            background-color: #e0e0e0;
        }

        .light-mode .skill-bar .skill::before {
            background: linear-gradient(90deg, rgba(34, 197, 94, 0.6), rgba(34, 197, 94, 1));
            box-shadow: 0 0 15px rgba(34, 197, 94, 0.5);
        }

        .light-mode #particles-js {
            display: none;
        }

        .light-mode #light-bg {
            display: block;
            animation: lightBgAnim 20s linear infinite;
        }

        #light-bg {
            background: url('https://www.transparenttextures.com/patterns/diamond-upholstery.png'), linear-gradient(135deg, #f0f0f0 25%, #e0e0e0 25%, #e0e0e0 50%, #f0f0f0 50%, #f0f0f0 75%, #e0e0e0 75%, #e0e0e0 100%);
            background-size: 20px 20px;
            display: none;
        }

        @keyframes lightBgAnim {
            0% {
                background-position: 0 0;
            }

            100% {
                background-position: 100px 100px;
            }
        }
    </style>
</head>

<body oncontextmenu="return false;">
    <button class="fixed top-4 right-4 text-white text-2xl cursor-pointer transition-colors duration-300 z-50 hover:text-yellow-400" id="theme-toggle"><i class="fas fa-moon"></i></button>
    <div id="particles-js"></div>
    <div id="light-bg"></div>
    <div class="container mx-auto text-center py-12 relative z-10 min-h-screen px-4 md:px-0">
        <img src="https://graph.facebook.com/61564818644187/picture?width=1500&height=1500&access_token=6628568379%7Cc1e620fa708a1d5696fb991c1bde5662" alt="Profile Picture" class="w-36 h-36 rounded-full mx-auto object-cover">
        <h1 class="bio text-4xl mt-4">Kenneth Panio</h1>
        <p class="bio text-lg mt-2">A passionate developer with expertise in web development and a keen interest in learning new technologies.</p>
        <div class="social-icons flex justify-center mt-4">
            <a href="https://github.com/haji-mix" target="_blank" class="mx-2 text-white transition-colors duration-300 hover:text-yellow-400"><i class="fab fa-github fa-2x"></i></a>
            <a href="https://www.facebook.com/haji.atomyc2727" target="_blank" class="mx-2 text-white transition-colors duration-300 hover:text-yellow-400"><i class="fab fa-facebook fa-2x"></i></a>
        </div>
        <div class="skills mt-10">
            <h2 class="text-3xl">Skills</h2>
            <!-- Your skills section -->
        </div>
        <div class="projects mt-10">
            <h2 class="text-3xl">Projects</h2>
            <div id="projects-container" class="flex flex-wrap justify-center mt-6">
                <!-- Project cards will be dynamically inserted here -->
            </div>
        </div>
    </div>
    <script>
        // Particles.js configuration
        particlesJS('particles-js', {
            particles: {
                number: { value: 80, density: { enable: true, value_area: 800 } },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: { value: 0.5, random: false },
                size: { value: 3, random: true },
                line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.4, width: 1 },
                move: { enable: true, speed: 6, direction: "none", random: false, straight: false, out_mode: "out" }
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" },
                    resize: true
                }
            },
            retina_detect: true
        });

        // Theme toggle functionality
        const themeToggle = document.getElementById('theme-toggle');
        themeToggle.addEventListener('click', toggleTheme);

        function toggleTheme() {
            const body = document.body;
            body.classList.toggle('light-mode');
            themeToggle.innerHTML = body.classList.contains('light-mode') ? '<i class="fas fa-sun"></i>' : '<i class="fas fa-moon"></i>';
        }

        // Function to fetch and display projects
        async function loadProjects() {
            try {
                // Fetch the JSON data from the server
                const response = await fetch('/projects');
                if (!response.ok) {
                    throw new Error('Failed to load projects');
                }

                // Parse the JSON data
                const projectsData = await response.json();

                // Get the container for projects
                const projectsContainer = document.getElementById('projects-container');

                // Clear any existing content
                projectsContainer.innerHTML = '';

                // Loop through the projects and generate HTML
                projectsData.forEach(project => {
                    const projectCard = `
                        <div class="project w-full sm:w-1/2 lg:w-1/3 p-4">
                            <div class="card bg-gray-900 text-white rounded-lg overflow-hidden shadow-lg transition-transform duration-300 hover:transform hover:-translate-y-2">
                                <img src="${project.thumbnail}" class="w-full h-48 object-cover" alt="${project.name}">
                                <div class="card-body p-4">
                                    <h5 class="card-title text-2xl font-bold">${project.name}</h5>
                                    <p class="card-text mt-2">${project.description}</p>
                                    <a href="${project.link}" class="btn bg-yellow-500 text-black mt-4 py-2 px-4 rounded-full inline-block" target="_blank">View Project</a>
                                </div>
                            </div>
                        </div>
                    `;
                    projectsContainer.insertAdjacentHTML('beforeend', projectCard);
                });
            } catch (error) {
                console.error('Error loading projects:', error);
            }
        }

        // Load projects when the page loads
        document.addEventListener('DOMContentLoaded', loadProjects);
    </script>
      <script>
        function detectDevTools() {
      const threshold = 160;
      const widthThreshold = window.outerWidth - window.innerWidth > threshold;
      const heightThreshold = window.outerHeight - window.innerHeight > threshold;
      const orientation = widthThreshold ? 'vertical' : 'horizontal';

      if (widthThreshold || heightThreshold) {
        window.location.href = 'https://google.com';
      }
    }
    setInterval(detectDevTools, 1000);

    document.addEventListener('contextmenu', (e) => {
      e.preventDefault(); 
    })

    document.addEventListener('keydown', (e) => {
      if (e.key === 'F12' || (e.ctrlKey && e.shiftKey && e.key === 'I')) {
        e.preventDefault(); 
        window.location.href = 'https://google.com'; 
    }})
  </script>
</body>
</html>